<h1 class="m-3">New game</h1>

<p class="m-3">
  <% @letters.each do |letter| %>
    <span class="letter-box"><%= letter %></span>
  <% end %>
</p>

<p class="m-3">What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false" class="m-3">
  <!-- ... -->
  <input type="text" name="word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters%>
  <input type="submit" value="Play">
</form>
